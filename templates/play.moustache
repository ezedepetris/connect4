<html>
  <head>
    <script src="Jquery/jquery-2.1.4.js"></script>
  
      <body bgcolor="black"></body>

      <div id="load_grid">
        {{> playAjax}}
      </div>

        <form action="add_token" autocomplete="on" method="post">
          <input type="hidden" value="0" name="col">
          <td width="70" align="left"><button type ="submit" >SAVE GAME</button></td>
        </form>
      
       <!-- CODIGO HARDCODEADO SOLO PARA LA COLUMNA 1 -->
     <script>
      $("document").ready(function(){
        $("#column1").on("submit", function(e){
          $.ajax({
            url: "/add_token",
            data: {col:1},
            method: "post"
          }).done(function(data){
            // alert(data);
            console.log(data);
            $("#load_grid").html(data);

          });
          e.preventDefault();
          return false;
        }); 
      });


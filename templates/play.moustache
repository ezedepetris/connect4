       <!-- CODIGO HARDCODEADO SOLO PARA LA COLUMNA 1 -->
     <script>
      $("document").ready(function(){
        $("#column1").on("submit", function(e){
          $.ajax({
            url: "/add_token",
            data: {col:1, game_id:"gameId", grid_id:"gridId"},
            method: "post"
          }).done(function(data){
            //alert(data);
            console.log(data);
            $("#column1").load(data);
          });
          e.preventDefault();
          return false;
        }); 
      });
     </script>
